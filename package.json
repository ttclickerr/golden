{
  "name": "tycoon-clicker-client",
  "version": "1.3.3",
  "private": true,
  "scripts": {
    "build": "npm run check-all-locales && vite build",
    "dev": "node start-client.js",
    "dev:direct": "node node_modules/vite/bin/vite.js --config ./vite.config.ts --port 3000",
    "dev:safe": "node start-client.js",
    "start": "npm run dev",
    "test": "jest autotest",
    "prepare": "husky install",
    "check-locales": "node scripts/check-locales.js",
    "check-achievement-locales": "node scripts/check-achievement-locales.js",
    "check-all-locales": "npm run check-locales && npm run check-achievement-locales",
    "prebuild": "npm run check-all-locales",
    "fix-permissions": "find node_modules -name '*esbuild*' -type f -exec chmod +x {} \\; && chmod +x node_modules/.bin/* 2>/dev/null || true",
    "postinstall": "npm run fix-permissions"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.0",
    "@capacitor/cli": "^7.4.0",
    "@capacitor/core": "^7.4.0",
